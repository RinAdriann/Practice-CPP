#include <iostream>
#include <iomanip>
using namespace std;
int main(){
        int n;
        cout << "insert maximum number: ";
        cin >> n;

        cout << setw(4) << " ";
        for(int a=0;a<=n;a++){
            cout << setw(4) << a;
        }
        cout << endl;
        for(int x=0;x<=n;x++){
            cout << x << "  -";
            for(int y=0;y<=n;y++){
                cout << setw(4) << x*y;
            }
            cout << endl;   
        }
        cout << "press Enter to continue...";
}
